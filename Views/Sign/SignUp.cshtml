}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    
</head>
<body background="/Images/i8.jpeg">
    <div class="row" style="margin-top:3%;padding-left:100px;padding-right:200px">
        <div class="container col-xs-4 img-rounded" style="padding-top: 15px; padding-bottom: 10px; background-color: #337AB7; ">

            <form action="/Sign/Registered" enctype="multipart/form-data" method="post">
                <h1 style="font-family:monospace;color:whitesmoke">Sign Up</h1><br />
                <span class="field-validation-valid" data-valmsg-for="name" data-valmsg-replace="true"></span><input class="form-control" data-val="true" data-val-required="Fill this Field!" id="name" name="Name" placeholder="First Name" type="text" value="" /><br>
                <span class="field-validation-valid" data-valmsg-for="lname" data-valmsg-replace="true"></span><input class="form-control" data-val="true" data-val-required="Fill this Field!" id="lname" name="LastName" placeholder="Last Name" type="text" value="" /><br>
                <input class="form-control" id="email" name="Email" placeholder="Email" type="text" value="" /><br>
                <input class="form-control" id="pass" name="Password" placeholder="Password" type="password" /><br>
                <input class="form-control" id="contact" name="Contact" placeholder="Contact" type="text" value="" /><br>
                <input class="form-control" id="address" name="Address" placeholder="Address" type="text" value="" /><br>
                <input type="file" class="form-control" name="Image" /><br>
                <input style="font-family:monospace" type="submit" value="SignUp" class="btn btn-success" />
            </form>
        </div>
    </div>
   
        
        
  
        
        
</body>
</html>





