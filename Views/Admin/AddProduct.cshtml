@{
    ViewBag.Title = "AddProduct";
}

<h2>AddProduct</h2>
<body background="/Images/i11.jpeg">
    <div class="row" style="margin-top:3%;padding-left:100px;padding-right:200px">
        <div class="container col-xs-4" style="padding-top: 15px; padding-bottom: 10px; background-color: #337AB7; ">

            <form action="/Admin/SaveProduct" enctype="multipart/form-data" method="post">
                <h1 style="font-family:monospace;color:whitesmoke">Add Product</h1><br />
                <span class="field-validation-valid" data-valmsg-for="name" data-valmsg-replace="true"></span><input class="form-control" data-val="true" data-val-required="Fill this Field!" id="name" name="Name" placeholder="Product Name" type="text" value="" /><br>
                <span class="field-validation-valid" data-valmsg-for="lname" data-valmsg-replace="true"></span><input class="form-control" data-val="true" data-val-required="Fill this Field!" id="lname" name="Description" placeholder="Description" type="text" value="" /><br>
                <input class="form-control" id="email" name="Price" placeholder="Price" type="text" value="" /><br>
                <input class="form-control" id="pass" name="Category" placeholder="Category" type="text" /><br>
                <br /> <input class="form-control" id="contact" name="Brand" placeholder="Brand" type="text" value="" /><br>
                
                <input type="file" class="form-control" name="Image" /><br>
                <input style="font-family:monospace" type="submit" value="Add" class="btn btn-success" />
            </form>
        </div>
    </div>
 </body>
